<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quitarts.puntotruco">

    <application
        android:name=".ApplicationMain"
        android:allowBackup="true"
        android:icon="@drawable/matchstick_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.ActivityAbout"
            android:theme="@style/NoActionBar" />

        <activity android:name=".views.ActivitySettings" />

        <activity
            android:name=".views.ActivityAlert"
            android:theme="@style/Modal" />

    </application>

</manifest>